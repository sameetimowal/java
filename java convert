#Convert a float to an integer and print both values. Then convert an integer to a double and print both.
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a float value: ");
        float floatValue = sc.nextFloat();
        int intFromFloat = (int) floatValue;

        System.out.println("Float value: " + floatValue);
        System.out.println("Converted to int: " + intFromFloat);

        System.out.print("Enter an integer value: ");
        int intValue = sc.nextInt();
        double doubleFromInt = intValue;

        System.out.println("Integer value: " + intValue);
        System.out.println("Converted to double: " + doubleFromInt);

        sc.close();
    }
}
